<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        link(rel="stylesheet", href="/styles/styles.css")
        title Guess Mine
    body
        .canvasContainer
            canvas#jsCanvas.canvas
            .controls
                .controls__range
                    input#jsRange(type="range", min="0.1", max="5.0", value="2.5", step="0.1")
                .controls__btns
                    button#jsMode Fill
                    button#jsClear Clear
                .controls__colors#jsColors
                    .controls__color.jsColor(style={background: "white"})
                    .controls__color.jsColor(style={background: "#FF3B30"})
                    .controls__color.jsColor(style={background: "#FF9500"})
                    .controls__color.jsColor(style={background: "#FFCC00"})
                    .controls__color.jsColor(style={background: "#2c2c2c"})
                    .controls__color.jsColor(style={background: "#4CD963"})
                    .controls__color.jsColor(style={background: "#5AC8FA"})
                    .controls__color.jsColor(style={background: "#0579FF"})
                    .controls__color.jsColor(style={background: "#5856D6"})
        .loginBox
            form#jsLogin
                input(type="text", placeholder="What is your name?")
        .gameContainer#jsGame
            .chat
                ul.chat__messages#jsMessages
                form.chat__form#jsSendMsg
                    input(type="text", placeholder="Write a message")
        .listContainer 
            .listTitle Player List
            .playerList#jsPlayerList 
        script.
            window.events = !{events}
        script(src="/socket.io/socket.io.js")
        script(src="/js/main.js")